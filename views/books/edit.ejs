<%- include('../partials/header') %>

<div class="container">
    <div style="text-align:center">
        <h1 style="text-align:center">Edit <%= book.name %></h1>
    </div>
    <div class="row">
        <div style="width:30%; margin:30px auto;">
            <form action="/books/<%=book._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= book.name %>" name="book[name]"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= book.image %>" name="book[image]"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="<%=book.price%>" step= ".01"  name="book[price]"> 
                 </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= book.description %>" name="book[description]"> 
                </div>
                <button class="btn btn-lg btn-primary btn-default btn-block">Updte</button>
            </form>
            <a href="/show/<%=book._id%>">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>