<%- include('../partials/header') %>

<div class="container">
    <div style="text-align:center">
        <h1 style="text-align:center">Edit Comment</h1>
    </div>
    <div class="row">
        <div style="width:30%; margin:30px auto;">
            <form action="/books/<%=book_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]"> 
                </div>
                <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
            </form>
            <a href="/books">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>